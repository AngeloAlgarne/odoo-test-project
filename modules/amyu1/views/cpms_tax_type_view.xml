<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>
        <record id="tax_tree_view" model="ir.ui.view">
            <field name="name">tax.tree.view</field>
            <field name="model">tax.type</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="select_tax_types"/>
                </tree>
            </field>
        </record>

        <record id="tax_tree_action" model="ir.actions.act_window">
            <field name="name">Tax Details</field>
            <field name="res_model">tax.type</field>
            <field name="view_mode">tree</field>
        </record>
    </data>
</odoo>